<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @pin.image.url(:medium) %> <br />
  <%= @pin.description %> <br />
  <% if @pin.user %>
    by <%= @pin.user.name %>
  <% end %>
</p>

<% if @pin.user == current_user %>
  <%= link_to 'Edit', edit_pin_path(@pin) %> |
<% end %>
<%= link_to 'Back', pins_path %>
